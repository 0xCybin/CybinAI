# CybinAI Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
DATABASE_URL=postgresql://cybinai:cybinai_local_dev@localhost:5432/cybinai
REDIS_URL=redis://localhost:6379

# ===================
# Authentication
# ===================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=7

# ===================
# AI / LLM
# ===================
# Primary: DeepSeek (most cost effective)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Fallback: OpenAI (optional)
OPENAI_API_KEY=your-openai-api-key

# Fallback: Anthropic (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Active LLM provider: deepseek, openai, or anthropic
LLM_PROVIDER=deepseek

# ===================
# Integrations
# ===================
# Jobber OAuth (Phase 2)
JOBBER_CLIENT_ID=
JOBBER_CLIENT_SECRET=
JOBBER_REDIRECT_URI=http://localhost:3000/api/integrations/jobber/callback

# ===================
# Application
# ===================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===================
# Email (Phase 2)
# ===================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@cybinai.com

# ===================
# Encryption
# ===================
# Used for encrypting sensitive data like integration credentials
ENCRYPTION_KEY=your-32-byte-encryption-key-here
